# ─── Logging (stdout for Railway) ─────────────────────────────────
# LOG_LEVEL=INFO
# One of: DEBUG, INFO, WARNING, ERROR. Default: INFO.

# ─── Database ────────────────────────────────────────────────────
DATABASE_URL=postgresql://user:pass@host:5432/dbname
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# ─── Supabase Auth ───────────────────────────────────────────────
SUPABASE_PROJECT_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_JWT_AUD=authenticated
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# ─── Plaid ───────────────────────────────────────────────────────
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox
# Optional: set to 1/true to verify webhook signatures (Plaid-Verification header). Recommended for production.
# PLAID_WEBHOOK_VERIFY=0
# Optional: URL Plaid will POST for holdings/item webhooks
# PLAID_WEBHOOK_URL=https://your-api.com/plaid/webhook
#
# Run Plaid PRODUCTION locally (real brokerages e.g. Wealthsimple):
#   - Set PLAID_ENV=production and use production keys from Plaid dashboard.
#   - Leave PLAID_WEBHOOK_VERIFY unset (or 0), or set PLAID_WEBHOOK_URL to a localhost URL;
#     verification is then skipped so webhooks work locally.
#   - Add http://localhost:3000/plaid-oauth to Redirect URIs in Plaid dashboard (production).
#   - FRONTEND_URL=http://localhost:3000 (or set PLAID_REDIRECT_URI) so Link redirects back to local.

# ─── API Keys ────────────────────────────────────────────────────
FINNHUB_API_KEY=your-finnhub-key
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=your-gemini-key
LINKUP_API_KEY=your-linkup-key
MARKET_AUX_API=your-marketaux-key
PPLX_API_KEY=pplx-...
TAVILY_API_KEY=tvly-...

# ─── AI Provider ─────────────────────────────────────────────────
AI_PROVIDER=gemini
GEMINI_MODEL=gemini-2.5-flash
GEMINI_USE_WEB=1
GEMINI_THINKING_BUDGET=1024
OPENAI_MODEL=gpt-4o-mini

# ─── Redis / Caching ────────────────────────────────────────────
UPSTASH_REDIS_URL=rediss://default:token@host:6379
SINGLE_STOCK_CACHE_TTL_SEC=86400
LOCAL_CACHE_TTL_SEC=60
CACHE_DEFAULT_TTL_SEC=300
REDIS_PREFIX=wallstreetai:dev:

# ─── Stripe ──────────────────────────────────────────────────────
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_PREMIUM=price_...
STRIPE_PRICE_PRO=price_...

# ─── CORS ────────────────────────────────────────────────────────
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ─── Rate Limiting ───────────────────────────────────────────────
RATE_LIMIT_DEFAULT=60/minute
REDIS_URL=memory://

# ─── SEC EDGAR ────────────────────────────────────────────────────
SEC_EDGAR_CONTACT=support@wallstreetai.io

# ─── Misc ────────────────────────────────────────────────────────
FRONTEND_URL=http://localhost:3000
JWT_RESET_SECRET_KEY=change-reset-secret-in-prod
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAME_SITE=lax
DEBUGPY=0
